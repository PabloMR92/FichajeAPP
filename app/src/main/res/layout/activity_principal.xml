<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_principal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.tinyterm1.helloworld.Activities.PrincipalActivity">


    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/logo"
        android:layout_above="@+id/btnfichadoManual"
        android:paddingBottom="5dp"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Fichado manual"
        android:textColor="@color/white"
        android:id="@+id/btnfichadoManual"
        android:layout_centerInParent="true"
        android:layout_marginTop="5dp"
    />

    <TextView
        android:id="@+id/txtultimaFichadaExitosaDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/txtultimaFichadaExitosa"
        android:layout_alignBottom="@+id/txtultimaFichadaExitosa"
        android:textColor="#343434"
        android:text="--"
        android:paddingLeft="10dip"
        android:textSize="12sp"
        android:layout_toRightOf="@+id/txtultimaFichadaExitosa"
        android:layout_toEndOf="@+id/txtultimaFichadaExitosa"/>

    <TextView

    android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Última fichada exitosa:"
        android:id="@+id/txtultimaFichadaExitosa"
        android:layout_below="@+id/txtproximaFichada"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:paddingTop="5dp"
        android:textStyle="bold"
        android:textSize="15sp"
        android:textColor="#343434"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Próxima fichada:"
        android:id="@+id/txtproximaFichada"
        android:layout_below="@+id/btnfichadoManual"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:paddingTop="5dp"
        android:textStyle="bold"
        android:textSize="15sp"
        android:textColor="#343434"/>

    <TextView
        android:id="@+id/txtproximaFichadaDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#343434"
        android:text="--"
        android:paddingLeft="10dip"
        android:textSize="12sp"
        android:layout_alignBaseline="@+id/txtproximaFichada"
        android:layout_alignBottom="@+id/txtproximaFichada"
        android:layout_toRightOf="@+id/txtultimaFichadaExitosa"
        android:layout_toEndOf="@+id/txtultimaFichadaExitosa" />


</RelativeLayout>
